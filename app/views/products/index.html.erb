
<div class="container">

  <div class="row">
    <div class="col-xs-9">
      <h1 class="text-center">Our Products</h1>
    </div>
    <div class="col-xs-3">
      <br />
      <% if can? :create, @product %>
        <%= link_to "Create New Product", new_product_path, {class:'btn btn-primary', style: 'color: white'} %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @products.each do |product| %>
      <%= link_to product_path(product.id) do %>
        <div class="col-md-4 col-sm-6">
          <div class="panel panel-default">
            <%= image_tag(product.image.thumbnail.url, {class: "center-block"}) %>
            <h4 class="text-center"><%= product.name %></h4>
            <p class="text-center"><%= product.quantity %> pieces still available</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
