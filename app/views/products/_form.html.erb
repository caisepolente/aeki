<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />

  <%= f.label :price %>
  <%= f.number_field :price %>
  <br />

  <%= f.label :image %>
  <%= f.file_field :image %>
  <br />

  <%= f.submit (@product.new_record? ? "Create" : "Update") %>
<% end %>
