<div class="container">
  <h1>Overview of products and stock</h1>

  <table class="table">
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Stock</th>
      <th></th>
    </tr>
    <% @products.each do |p| %>
      <tr>
        <th><%= p.name %></th>
        <th><%= p.price %></th>
        <th><%= p.quantity %></th>
        <th><%= link_to "[edit]", edit_product_path(p.id) %><th>
      </tr>
    <% end %>
  </table>
</div>
