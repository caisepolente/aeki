<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />

  <%= f.label :price %>
  <%= f.number_field :price %>
  <br />

  <%= f.label :image %>
  <%= f.file_field :image %>
  <br />
  
  <%= f.fields_for :inventory, Inventory.find_by(product_id: @product.id ) do |ff| %>

    <%= ff.label :quantity %>
    <%= ff.number_field :quantity %>
  <% end %>

  <%= f.submit (@product.new_record? ? "Create" : "Update") %>
<% end %>
