<h1><%= @product.name %></h1>

<p>
  <%= image_tag(@product.image, alt: @product.name)%>
</p>
<br />

<p>
  <%= @product.description %>
</p>
<br />

<p>
  <%= "EUR " + "#{@product.price}" %>
</p>

<%= link_to 'Home', root_path %>
<%= link_to 'Edit', edit_product_path %>
<%= link_to 'Delete', product_path(@product.id), method: :delete, data: { confirm: "Are you sure?" } %>
