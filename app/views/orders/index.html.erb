<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Orders</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Customer</th>
        <th>Products</th>
        <th>Total price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.to_s(:long) %></td>
          <td><%= order.user.profile.first_name + " " + order.user.profile.surname %></td>
          <td>
            <% order.line_items.each do |line_item| %>
              <%= line_item.product.name + " (" + line_item.quantity.to_s + ")" %><br>
            <% end %>
          </td>
          <td class="price"><%= number_to_currency(order.total_price, unit: "â‚¬ ") %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
